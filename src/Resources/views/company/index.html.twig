{% extends 'base.html.twig' %}

{% block title %}Все компании{% endblock %}

{% block header %}
    <h1>Все компании</h1>
    <p>Всего {{ companies|length }}</p>
{% endblock %}

{% block body %}

    <table class="table">
        <thead>
            <tr>
                <th>Индекс</th>
                <th>Название</th>
                <th>Сайт</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.site }}</td>
                <td>{{ company.address }}</td>
                <td>{{ company.phone }}</td>
                <td>
                    <a href="{{ path('company_show', {'id': company.id}) }}" class="btn btn-xs btn-success">Детали</a>
                    <a href="{{ path('company_edit', {'id': company.id}) }}" class="btn btn-xs btn-warning">Изменить</a>
                    <a href="{{ path('company_delete', {'id': company.id}) }}" class="btn btn-xs btn-danger">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('company_new') }}" class="btn btn-success">Создать</a>
{% endblock %}
