{% extends 'base.html.twig' %}

{% block title %}Отклик {{ reaction.id }}{% endblock %}

{% block header %}
    <h1>Отклик {{ reaction.id }}</h1>
    <p>Отклик от компании "{{ reaction.company }}" на резюме "{{ reaction.rezume}}"</p>
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reaction.id }}</td>
            </tr>
            <tr>
                <th>SendTime</th>
                <td>{{ reaction.sendTime ? reaction.sendTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Reaction</th>
                <td>{{ reaction.reaction ? reaction.reaction|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('reaction_edit', {'id': reaction.id}) }}" class="btn btn-warning">Изменить</a>
    <hr />
    {{ include('reaction/_delete_form.html.twig') }}
    {{ include('_parts/_to_list.html.twig', {'button_url': 'reaction_index', 'button_label': 'Назад'}) }}    

{% endblock %}
