{% extends 'base.html.twig' %}

{% block title %}Все отклики{% endblock %}

{% block header %}
    <h1>Все отклики</h1>
{% endblock %}

{% block body %}
    <table class="table">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Компания</th>
                <th>Позиция</th>
                <th>Дата отправления</th>
                <th>Дата ответа</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for reaction in reactions %}
            <tr>
                <td>{{ reaction.id }}</td>
                <td>{{ reaction.company }}</td>
                <td>{{ reaction.rezume }}</td>
                <td>{{ reaction.sendTime ? reaction.sendTime|date('d.m.Y H:i:s') : '' }}</td>
                <td>{{ reaction.reaction ? reaction.reaction|date('d.m.Y H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('reaction_show', {'id': reaction.id}) }}" class="btn btn-xs btn-success">Детали</a>
                    <a href="{{ path('reaction_edit', {'id': reaction.id}) }}" class="btn btn-xs btn-warning">Изменить</a>
                    <a href="{{ path('reaction_delete', {'id': reaction.id}) }}" class="btn btn-xs btn-danger">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reaction_new') }}" class="btn btn-success">Создать</a>
{% endblock %}
