{% extends 'base.html.twig' %}

{% block title %}Резюме {{ rezume.id }}{% endblock %}

{% block header %}
    <h1>Резюме {{ rezume.id }}</h1>
{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rezume.id }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ rezume.position }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{% if rezume.file %}
                        <a href="/uploads/files/{{ rezume.file }}">Файл</a>
                    {% endif %}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ rezume.text }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ rezume.createdAt ? rezume.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ rezume.updatedAt ? rezume.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('rezume_edit', {'id': rezume.id}) }}" class="btn btn-warning">Изменить</a>
    <hr />
    {{ include('rezume/_delete_form.html.twig') }}
    {{ include('_parts/_to_list.html.twig', {'button_url': 'rezume_index', 'button_label': 'Назад'}) }}    
{% endblock %}
